{
    "name": "fivelab/resource",
    "description": "Simple resource and serialization system for application",
    "keywords": [ "resource", "rest", "api", "serializer", "web api", "hateoas" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "https://fivelab.org"
        }
    ],

    "require": {
        "php": "~8.0",
        "symfony/serializer": "~5.4 | ~6.0",
        "symfony/event-dispatcher": "~5.4 | ~6.0",
        "symfony/property-access": "~5.4 | ~6.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "phpmetrics/phpmetrics": "^2.0",
        "escapestudios/symfony2-coding-standard": "~3.5",
        "phpstan/phpstan": "~1.10.0"
    },

    "autoload": {
        "psr-4": { "FiveLab\\Component\\Resource\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "FiveLab\\Component\\Resource\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "thanks": {
            "name": "fivelab/resource",
            "url": "https://github.com/FiveLab/Resource"
        }
    }
}
